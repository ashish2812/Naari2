<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgrounThemeColor"
    tools:context=".LoginSignUP.LoginActivity">

    <ImageView
        android:id="@+id/image_header"
        android:layout_width="412dp"
        android:layout_height="306dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="-20dp"
        android:src="@drawable/header_image" />

    <RelativeLayout
        android:layout_width="350dp"
        android:layout_height="524dp"
        android:layout_below="@+id/image_header"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-125dp"
        android:layout_marginBottom="75dp"
        android:background="@drawable/rectangle_background"
        android:padding="20dp">
        <RelativeLayout
            android:layout_width="240dp"
            android:layout_marginTop="20dp"
            android:layout_centerHorizontal="true"
            android:id="@+id/label_login"
            android:background="@drawable/login_header"
            android:layout_height="36dp">
            
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textSize="12sp"
                android:fontFamily="@font/poppins_semibold"
                android:textColor="@color/white"
                android:text="@string/log_in"
                android:layout_marginStart="40dp"
                android:layout_alignParentStart="true"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textSize="12sp"
                android:onClick="signUp"
                android:fontFamily="@font/poppins_semibold"
                android:textColor="@color/colorPrimary"
                android:text="@string/sign_up"
                android:layout_marginEnd="37dp"
                android:layout_alignParentEnd="true"
                />

        </RelativeLayout>



        <com.hbb20.CountryCodePicker
            android:id="@+id/SignIn_CountryCodePicker"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/label_login"
            android:layout_marginTop="20dp"
            android:outlineAmbientShadowColor="@color/colorPrimary"
            android:outlineSpotShadowColor="@color/colorPrimary"
            app:ccpDialog_textColor="@color/textColor"
            app:ccp_showFlag="true"
            app:ccp_showFullName="true"
            app:ccp_showNameCode="true" />

        <EditText
            android:id="@+id/logInPhoneNumber"
            android:layout_width="275dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/SignIn_CountryCodePicker"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:backgroundTint="@color/backgrounThemeColor"
            android:fontFamily="@font/poppins"
            android:hint="@string/enter_phonenumber"
            android:inputType="phone"
            android:textColorHint="@color/textColor"
            android:textSize="12sp" />

        <EditText
            android:id="@+id/logInPassword"
            android:layout_width="275dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/logInPhoneNumber"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="24.5dp"
            android:backgroundTint="@color/backgrounThemeColor"
            android:fontFamily="@font/poppins"
            android:hint="@string/enter_password"
            android:inputType="textPassword"
            android:textColorHint="@color/textColor"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/forgetPasswordTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/logInPassword"
            android:layout_alignParentRight="true"
            android:layout_marginTop="3dp"
            android:layout_marginRight="23dp"
            android:fontFamily="@font/poppins"
            android:text="Forget Password?"
            android:textColor="@color/textColor"
            android:textSize="10sp" />

        <Button
            android:id="@+id/login_button"
            android:layout_width="270dp"
            android:layout_height="46dp"
            android:layout_below="@+id/forgetPasswordTv"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="24.5dp"
            android:background="@drawable/background_button"
            android:fontFamily="@font/poppins_semibold"
            android:text="@string/log_in"
            android:textSize="14sp"
            android:textAllCaps="false"
            android:textColor="@color/white"
             />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/login_button"
            android:layout_centerHorizontal="true"
            android:text="OR"
            android:textSize="12dp"
            android:id="@+id/or"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/poppins_semibold"
            android:textColor="@color/textColor" />
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_below="@+id/or"
            android:layout_centerHorizontal="true"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="47dp"
                android:layout_height="46dp"
                android:id="@+id/facebookSignin"
                android:src="@drawable/facebook"
                />
            <ImageView
                android:layout_width="47dp"
                android:layout_height="46dp"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/facebookSignin"
                android:id="@+id/twitterSignin"
                android:src="@drawable/twitter"
                />
            <ImageView
                android:layout_width="47dp"
                android:layout_height="46dp"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/twitterSignin"
                android:id="@+id/googleSignin"
                android:src="@drawable/google_signin"
                />
        </RelativeLayout>
        

    </RelativeLayout>

</RelativeLayout>