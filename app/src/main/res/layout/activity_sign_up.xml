<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginSignUP.SignUpActivity">


    <ImageView
        android:id="@+id/image_header"
        android:layout_width="412dp"
        android:layout_height="306dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="-21dp"
        android:src="@drawable/header_image"
        android:layout_alignParentLeft="true" />

    <RelativeLayout
        android:layout_width="373dp"
        android:layout_height="600dp"
        android:layout_below="@+id/image_header"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-125dp"

        android:background="@drawable/rectangle_background"
        android:padding="20dp">

        <RelativeLayout
            android:id="@+id/label_login"
            android:layout_width="240dp"
            android:layout_height="36dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:background="@drawable/signup_header">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="40dp"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="4dp"
                android:fontFamily="@font/poppins_semibold"
                android:onClick="logIn"
                android:text="@string/log_in"
                android:textColor="@color/colorPrimary"
                android:textSize="12sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="37dp"
                android:layout_marginRight="37dp"
                android:fontFamily="@font/poppins_semibold"
                android:text="@string/sign_up"
                android:textColor="@color/white"
                android:textSize="12sp" />

        </RelativeLayout>


        <com.hbb20.CountryCodePicker
            android:id="@+id/SignIn_CountryCodePicker"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/label_login"
            android:layout_marginTop="20dp"
            android:outlineAmbientShadowColor="@color/colorPrimary"
            android:outlineSpotShadowColor="@color/colorPrimary"
            app:ccpDialog_textColor="@color/textColor"
            app:ccp_showFlag="true"
            app:ccp_showFullName="true"
            app:ccp_showNameCode="true" />

        <EditText
            android:id="@+id/logInPhoneNumber"
            android:layout_width="275dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/SignIn_CountryCodePicker"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:backgroundTint="@color/backgrounThemeColor"
            android:fontFamily="@font/poppins"
            android:hint="@string/enter_phonenumber"
            android:inputType="phone"
            android:textColorHint="@color/textColor"
            android:textSize="12sp" />
        <EditText
            android:id="@+id/signUpName"
            android:layout_width="275dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/logInPhoneNumber"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="12dp"
            android:backgroundTint="@color/backgrounThemeColor"
            android:fontFamily="@font/poppins"
            android:hint="Name"
            android:inputType="textPersonName"
            android:textColorHint="@color/textColor"
            android:textSize="12sp" />

        <EditText
            android:id="@+id/logInPassword"
            android:layout_width="275dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/signUpName"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="12dp"
            android:backgroundTint="@color/backgrounThemeColor"
            android:fontFamily="@font/poppins"
            android:hint="@string/enter_password"
            android:inputType="textPassword"
            android:textColorHint="@color/textColor"
            android:textSize="12sp" />

        <EditText
            android:id="@+id/confirmPassword"
            android:layout_width="275dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/logInPassword"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="12dp"
            android:backgroundTint="@color/backgrounThemeColor"
            android:fontFamily="@font/poppins"
            android:hint="Confirm Password"
            android:inputType="textPassword"
            android:textColorHint="@color/textColor"
            android:textSize="12sp" />

        <ProgressBar
            android:id="@+id/progress_circular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/confirmPassword"
            android:layout_centerHorizontal="true"
            android:visibility="gone"
            android:indeterminateTint="@color/colorPrimary" />

        <Button
            android:id="@+id/signUpButton"
            android:layout_width="270dp"
            android:layout_height="46dp"
            android:layout_below="@+id/confirmPassword"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="23dp"
            android:layout_marginEnd="24dp"
            android:onClick="signUp"
            android:textSize="14sp"
            android:layout_marginRight="24dp"
            android:background="@drawable/background_button"
            android:fontFamily="@font/poppins_semibold"
            android:text="@string/sign_up"
            android:textAllCaps="false"
            android:textColor="@color/white"
            />

        <TextView
            android:id="@+id/or"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/signUpButton"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/poppins_semibold"
            android:text="OR"

            android:textColor="@color/textColor"
            android:textSize="12sp" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/or"
            android:layout_centerHorizontal="true">

            <com.facebook.login.widget.LoginButton
                android:id="@+id/facebookSignin"
                android:layout_width="47dp"
                android:layout_height="46dp"
               android:background="@drawable/facebook" />

            <ImageView
                android:id="@+id/twitterSignin"
                android:layout_width="47dp"
                android:layout_height="46dp"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/facebookSignin"
                android:src="@drawable/twitter" />

            <ImageView
                android:id="@+id/googleSignin"
                android:layout_width="47dp"
                android:layout_height="46dp"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/twitterSignin"
                android:src="@drawable/google_signin" />
        </RelativeLayout>


    </RelativeLayout>


</RelativeLayout>