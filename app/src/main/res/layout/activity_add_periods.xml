<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgrounThemeColor"
    tools:context=".LoginSignUP.AddPeriods">
    
    <ImageView
        android:id="@+id/image_header"
        android:layout_width="match_parent"
        android:layout_height="363dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="-36dp"
        android:src="@drawable/periods_image_header" />

    <TextView
        android:id="@+id/pleaseAdd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/image_header"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/poppins"
        android:text="Please Add"
        android:textColor="@color/black"
        android:textSize="32sp" />

    <TextView
        android:id="@+id/description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pleaseAdd"
        android:layout_marginTop="18dp"
        android:fontFamily="@font/poppins"
        android:gravity="center_horizontal"
        android:padding="10dp"
        android:text="@string/OnBoardingSliderTwoDescription"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="12sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your Last Period Was on \n26 may"
        android:textAlignment="center"
        android:id="@+id/periodDateTV"
        android:textSize="15sp"
        android:layout_below="@+id/description"
        android:layout_marginTop="5dp"
        android:textColor="@color/black"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/poppins_semibold"
        android:gravity="center_horizontal" />

    <Button
        android:id="@+id/addBtn"
        android:layout_width="267dp"
        android:layout_height="46dp"
        android:layout_below="@id/periodDateTV"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:background="@drawable/background_button"
        android:fontFamily="@font/poppins_semibold"
        android:onClick="add"
        android:text="Add"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="14sp" />

    <Button
        android:id="@+id/continueBtn"
        android:layout_width="267dp"
        android:layout_height="46dp"
        android:layout_below="@id/periodDateTV"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:background="@drawable/background_button"
        android:fontFamily="@font/poppins_semibold"
        android:onClick="continueBtn"
        android:text="Continue"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:visibility="gone" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/re_enter"
        android:layout_below="@+id/continueBtn"
        android:layout_centerHorizontal="true"
        android:id="@+id/reEnter"
        android:textColor="@color/black"
        android:visibility="gone"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/poppins_semibold"
        android:textStyle="italic"
        />

</RelativeLayout>